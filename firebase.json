{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      { "source": "/blog", "destination": "/blog.html" },
      { "source": "/work", "destination": "/work.html" },
      { "source": "/blog/post1", "destination": "/blog/post1.html" },
      { "source": "/blog/post2", "destination": "/blog/post2.html" },
      { "source": "404", "destination": "/404.html" },
      { "source": "**", "destination": "/index.html" }
    ]
  }
}